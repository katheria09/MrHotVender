<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:divider="#E6E6E6"
        android:dividerHeight="0px"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="0dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCategory_item"
                android:text="Category"
                android:textSize="12sp"
                android:layout_below="@+id/tvName_item"
                android:layout_marginTop="3dp"
                android:layout_alignLeft="@+id/tvName_item"
                android:layout_alignStart="@+id/tvName_item" />

            <TextView
                android:id="@+id/tvName_item"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/rb"
                android:layout_toEndOf="@+id/rb"
                android:layout_weight="1" />




                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/rb"
                    />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPrice_item"
                android:text="$20"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginRight="43dp"
                android:layout_marginEnd="43dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>